      "explanation": "Special outfit tables.",
      "entries": [
        "{attribute}",
        "{feature}"
      ]
    },
    {
      "**************************************************": "TESTING"
    },
    {
      "name": "test",
      "explanation": "Test routine for checking the generator functionality.",
      "entries": [
        "result: {result}, summary: {summary}, detail: {detail}, common: {common}, rare: {rare}, myth: {myth}, fantasy: {fantasy}, modern: {modern}, futuristic: {futuristic}. Social class: {global:socialclass}, attribute: {global:outfitattribute}, outfit: {global:outfit}, feature: {global:outfitfeature}. Special: {special}."
      ]
    }
  ]
}
