  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the required global variables, if any.",
      "entries": [
        {
          "v": "",
          "export": {
            "protagonist": "{protagonist}",
            "villain": "{villain}",
            "beat": "{beat}",
            "resolution": "{resolution}"
          }
        }
      ]
    },
    {
      "**************************************************": "OUTPUT VARIANTS"
    },
    {
      "name": "result",
      "explanation": "The output format.",
      "entries": [
        "{summary}",
        "{detail}",
        "{description}",
        "{stats}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief output.",
      "entries": [
        "{genre}"
      ]
    },
    {
      "name": "detail",
