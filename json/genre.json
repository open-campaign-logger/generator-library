      "entries": [
        "{attribute} {genre}",
        "{genre} {feature}",
        "{attribute} {genre} {feature}"
      ]
    },
    {
      "name": "description",
      "explanation": "Long description as a paragraph of text.",
      "entries": [
        "The {genre} {looks} {attribute}.",
        "The {genre} {looks} {feature}.",
        "The {attribute} {genre} {looks} {feature}."
      ]
    },
    {
      "name": "stats",
      "explanation": "Details as statistics.",
      "entries": [
        "{b|Genre}: {g:genre} \r\n{b|Protagonist}: {g:protagonist} \r\n{b|Villain}: {villain} \r\n{b|Attribute}: {attribute} \r\n{b|Feature}: {feature} "
      ]
