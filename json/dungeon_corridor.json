  "date": "2018-01-26",
  "authors": "Esko Vesala",
  "sources": "",
  "genre": "fantasy",
  "categories": [
    "world"
  ],
  "tables": [
    {
      "name": "init",
      "explanation": "Initializing the corridor parameters.",
      "entries": [
        "{size}{shape}{type}{result}"
      ]
    },
    {
      "name": "result",
      "explanation": "Verbosity of the resultPattern output.",
      "entries": [
        "{summary} {global:para}{extra}",
        "{detail} {global:para}{extra}"
      ]
    },
    {
      "name": "summary",
      "explanation": "Brief resultPattern output.",
      "entries": [
        "a {corridor} {exits}."
      ]
    },
    {
      "name": "detail",
      "explanation": "Detailed resultPattern output variations.",
      "entries": [
        "a {corridor} {exits}. In the passage a {contents} can be seen."
      ]
    },
    {
      "name": "contents",
      "explanation": "Listing the contents of the corridor.",
      "entries": [
        "chest"
      ]
    },
    {
      "name": "exits",
      "explanation": "Listing the exits from the corridor.",
      "entries": [
        "with the following exits: {doors}"
      ]
    },
    {
      "name": "corridor",
      "explanation": "Dungeon corridor description types by rarity.",
